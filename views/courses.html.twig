<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>University Registrar</title>
    </head>
    <body>
        <h1>Courses</h1>
        {% if courses is not empty %}
            <ul>
            {% for course in courses %}
                    <h3>{{ course.getCourseName }}</h3>
                    {% if course.getStudents is not empty %}
                    <ul>
                        {% for student in course.getStudents %}
                        <li>{{ student.getName }}</li>
                        {% endfor %}
                    </ul>
                    {% else %}
                        <p>This course has no students.</p>
                    {% endif %}
                     <p><a href="/courses/{{ course.getId }}/edit">Edit this Course</a></p>
                    </form>
            {% endfor %}
            </ul>
        {% else %}
            <p>
                No courses added yet!
            </p>
        {% endif %}

        <form action="/courses_add" method="post">
            <label for="course_name">Course Name</label>
                <input type="text" name="course_name">

            <button type="submit" name="button">Submit</button>
        </form>



        <a href="/">home</a>
    </body>
</html>
