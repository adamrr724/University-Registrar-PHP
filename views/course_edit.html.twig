<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>University Registrar</title>
    </head>
    <body>
        <h1>{{ course.getCourseName }}</h1>
        <h2>Add Student to a Course</h2>
            <form class="" action="/course_add/{{ course.getId }}/student" method="post">
                <label for="student">Choose a Student:</label>
                <select class="" name="student">
                    {% for student in students %}
                        <option value="{{ student.getId }}">{{ student.getName }}</option>
                    {% endfor %}
                </select>
                <button type="submit" name="button">Add Student</button>
            </form>

        <h2>Update Course Info:</h2>
            <form class="" action="/course/{{ course.getId }}/edit_name" method="post">
                <input name="_method" type="hidden" value="patch">
                <label for="course_name">New Course Name:</label>
                <input type="text" name="course_name" value="{{ course.getCourseName }}">
                <button type="submit" name="button">Update Course Title</button>
            </form>

        <h2>Delete Course:</h2>
            <form class="" action="/course/{{ course.getId }}/delete" method="post">
                <input name="_method" type="hidden" value="delete">
                <button type="submit" name="button">Delete Course</button>
            </form>


    </body>
</html>
